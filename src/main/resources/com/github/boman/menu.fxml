        </ImageView>
        <Button fx:id="play" mnemonicParsing="false" onAction="#startGame" style="-fx-pref-width: 120; -fx-pref-height: 40;" text="Play">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>
      <Button fx:id="help" mnemonicParsing="false" onAction="#helpScene" prefHeight="40.0" prefWidth="120.0" text="Help" />
        <Button fx:id="quit" mnemonicParsing="false" onAction="#quitGame" style="-fx-pref-width: 120; -fx-pref-height: 40;" text="Quit" textAlignment="CENTER">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>
    </children>
</VBox>
